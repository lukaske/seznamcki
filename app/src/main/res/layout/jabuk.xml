<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/opomba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ime"
            android:layout_toEndOf="@+id/stevilka"
            android:layout_toRightOf="@+id/stevilka"
            android:paddingBottom="1dp" />

        <TextView
            android:id="@+id/ime"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_alignTop="@+id/stevilka"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/stevilka"
            android:layout_toRightOf="@+id/stevilka"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingBottom="0dp"
            android:paddingTop="19dp"
            android:text="ookortgortgokokfokeoskfodkfok"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/common_google_signin_btn_text_light_focused"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stevilka"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_column="1"
            android:layout_row="0"
            android:gravity="center"
            android:text="10"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="?attr/colorControlNormal"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>